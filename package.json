{
  "name": "dexrx",
  "version": "2.1.0",
  "private": true,
  "main": "./lib/dexrx/dist/index.js",
  "types": "./lib/dexrx/dist/index.d.ts",
  "exports": {
    ".": "./lib/dexrx/dist/index.js",
    "./worker": "./lib/dexrx/dist/worker.js",
    "./package.json": "./package.json"
  },
  "description": "Reactive Graph Engine with parallel execution support",
  "keywords": [
    "rxjs",
    "reactive",
    "graph",
    "dataflow",
    "declarative",
    "typescript"
  ],
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm && yarn build:minify && yarn build:worker && yarn build:cleanup",
    "build:worker": "node scripts/copy-worker.js",
    "build:cjs": "tsc -p lib/dexrx/tsconfig.cjs.json",
    "build:esm": "tsc -p lib/dexrx/tsconfig.esm.json",
    "build:minify": "node scripts/minify.js",
    "build:cleanup": "find lib/dexrx/dist -name '*.tsbuildinfo' -delete",
    "docs": "cd lib/dexrx && typedoc --options typedoc.json --tsconfig tsconfig.json src/index.ts",
    "docs:clean": "rm -rf lib/dexrx/docs/api",
    "docs:watch": "cd lib/dexrx && typedoc --options typedoc.json --tsconfig tsconfig.json --watch src/index.ts",
    "docs:serve": "npx serve lib/dexrx/docs/api",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:karma": "karma start karma.conf.js",
    "test:karma:single": "karma start karma.conf.js --single-run",
    "test:matrix": "bash scripts/test-matrix.sh",
    "test:matrix:quick": "bash scripts/test-matrix.sh --quick",
    "clean": "rm -rf lib/dexrx/dist lib/dexrx/docs",
    "dev": "tsc -p lib/dexrx/tsconfig.json --watch",
    "lint": "eslint 'lib/**/*.ts'",
    "lint:fix": "eslint 'lib/**/*.ts' --fix",
    "format": "prettier --check lib/**/*.ts",
    "format:fix": "prettier --write lib/**/*.ts"
  },
  "testEnvironments": {
    "node": "Node.js tests using Jest",
    "browser": "Browser tests using Karma"
  },
  "testFeatures": {
    "parallel": {
      "node": "Tests for parallel execution in Node.js",
      "browser": "Tests for parallel execution in browsers with Web Workers"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "jasmine-core": "^5.6.0",
    "jest": "^29.7.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-webpack": "^5.0.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typedoc": "^0.25.0",
    "webpack": "^5.99.5",
    "esbuild": "^0.19.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "rxjs": "^7.8.0"
  }
}
